{
  "compilerOptions": {
    "outDir": "build",
    "baseUrl": ".",
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@test/*": ["test/*"],
      "@shared/*": ["src/shared/*"],
      "@domain/*": ["src/1-domain/*"],
      "@business/*": ["src/2-business/*"],
      "@presentation/*": ["src/3-presentation/*"],
      "@infra/*": ["src/4-infra/*"]
  },
  },
}
